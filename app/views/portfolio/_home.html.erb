<div id="home" class="container home">
  <div class="col-md-6 col-md-offset-3">
    <div class="content">
      <h1> <%= @user.name %> </h1>
      <p> <%= @user.summary.gsub(/\n/, "<br/>").html_safe %> </p>
    </div>
    <div class="avatar">
      <%= image_tag(@user.avatar, class: 'img-circle img-responsive') %>
    </div>
    <nav class="main">
      <ul class="nav nav-tabs">
        <li><a id="#home">Home</a></li>
        <li><a id="#projects">Projects</a></li>
        <li><a id="#summary">Summary</a></li>
        <li><a id="#contact">Contact</a></li>
      </ul>
    </nav>
  </div>
</div>
