<div id='projects' class='container'>
  <% @user.projects.each_with_index do |project, index| %>
  <div class='row'>
    <div class='col-md-6'>
      <div class="project_img">
        <%= image_tag(project.image, class: 'img-responsive') %>
      </div>
    </div>
    <div class='col-md-6'>
      <h1><strong> <%= link_to(project.name, project.link) %> </strong></h1>
      <p> <%= project.description %> </p>
      <ul class="skills">
        <% project.skills.each do |skill| %>
        <li> <%= skill.tag %> </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= content_tag(:hr) unless index == @user.projects.size - 1 %>
  <% end %>
</div>
